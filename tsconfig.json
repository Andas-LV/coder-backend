{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}